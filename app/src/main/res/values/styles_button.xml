<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppButtons.Button" parent="Widget.Material3.Button">
        <item name="android:padding">14dp</item>
        <item name="android:textAppearance">@style/AppTypography.Body1</item>
        <item name="backgroundTint">@color/button_main_bgd</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/outfit_bold</item>
    </style>

    <style name="AppButtons.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:padding">14dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/AppTypography.Body1</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.PushNotifications.PositiveButton" parent="Widget.Material3.Button.TextButton">

        <item name="backgroundTint">@color/bgd_push_positive_button</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="AppTheme.PushNotifications.NegativeButton" parent="Widget.Material3.Button.TextButton">


        <item name="backgroundTint">@color/bgd_push_negative_button</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?colorPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="Button.SecondaryButton" parent="Widget.MaterialComponents.Button.TextButton">

        <item name="shapeAppearanceOverlay">@style/SecondaryButtonAppearance</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">44.4dp</item>
        <!--<item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>-->
    </style>

    <style name="Button.SecondaryButtonColored" parent="Widget.MaterialComponents.Button.TextButton">

        <item name="shapeAppearanceOverlay">@style/SecondaryButtonAppearance</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/bgd_main_button</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_height">44.4dp</item>
        <!--<item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>-->
    </style>

    <style name="SecondaryButtonAppearance">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">5dp</item>
        <item name="android:layout_height">16dp</item>
    </style>
</resources>